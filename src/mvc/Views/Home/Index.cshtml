@model IEnumerable<Finca>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <h1 class="display-4">Fincas</h1>

    <table class="table">

        <a asp-controller="Home" asp-action="Add" class="btn btn-primary">Agregar</a>

        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Ubicacion</th>
                <th scope="col">Hectareas</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Opciones</th>

            </tr>
        </thead>
        <tbody>
            @foreach(var finca in Model)
            {
                <tr>
                    <th scope="row">@finca.Id</th>
                    <td>@finca.Nombre</td>
                    <td>@finca.Ubicacion</td>
                    <td>@finca.Hectareas</td>
                    <td>@finca.Descripcion</td>
                    <td>
                        <a 
                            asp-asp-controller="Home" 
                            asp-action="Update"
                            asp-route-id="@finca.Id"
                            class="btn btn-warning"
                        >
                            Editar
                        </a>
                        <a 
                            class="btn btn-danger"
                            asp-asp-controller="Home" 
                            asp-action="Delete"
                            asp-route-id="@finca.Id"
                        >
                            Eliminar
                        </a>
                    </td>


                </tr>
            }

        </tbody>
    </table>

</div>
