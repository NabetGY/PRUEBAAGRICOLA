@{
    ViewData["Title"] = "Agregar";
}

@model mvc.Models.LoteAddViewModel;
<form asp-controller="Lote" asp-action="Add" method="post">

    <div class="row">
        <div class="col-sm-8">
            <h2>Nuevo item</h2>

            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label" for="">Nombre: </label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Nombre" type="text">
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Id_Finca" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="Id_Finca" asp-items="Model.Fincas" class="form-select" ></select>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label" for="">Arboles: </label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Arboles" type="number">
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label" for="">Etapa: </label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Etapa" type="text">
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-controller="Lote" asp-action="Index" class="btn btn-warning">Volver</a>

        </div>
    </div>
</form>
